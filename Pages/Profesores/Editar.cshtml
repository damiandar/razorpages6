        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Profesor.EstudioTipo" value="3">
            <label class="form-check-label" for="exampleRadios3">
                Disabled radio
            </label>
        </div>
    </div>
    <div class="form-group">
        <input asp-for="Profesor.FechaNacimiento" placeholder="Ingresar Fecha" />
        <span asp-validation-for="Profesor.FechaNacimiento" class="badge badge-danger"></span>
    </div>
