                <th>Fecha nacimiento</th>
                <th>Estudio tipo</th>
                <th>Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Profesores)
            {
            <tr>
                <td>@item.Legajo
                    <img asp-append-version="true" src="~/images/imagen.jpg" class="rounded-circl" style="width:75px;height:75px;" />
